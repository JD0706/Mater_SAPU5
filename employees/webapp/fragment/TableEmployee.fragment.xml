<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
       <Panel >
              <Button id="btnShowCity" text="{i18n>showCity}" visible="{jsonModelConfig>/visibleBtnShowCity}" press = "onshowCity"/>
              <Button id="btnHideCity" text="{i18n>HideCity}" visible="{jsonModelConfig>/visibleBtnHideCity}" press = "onHideCity"/>
               <Table id="tableEmployee" items="{odataNorthwind>/Employees}" >
               <columns>
                  <Column  visible ="{jsonModelConfig>/visibleID}">
                    <header>
                      <Label text="{i18n>tableid}"/>
                    </header>
                  </Column >
                  <Column visible ="{jsonModelConfig>/visibleName}" >
                    <header>
                      <Label text="{i18n>tableName}"/>
                    </header>
                  </Column >
                  <Column >
                    <header>
                      <Label text="{i18n>tableCountry}"/>
                    </header>
                  </Column>
                  <Column visible ="{jsonModelConfig>/visibleCity}">
                    <header>
                      <Label text="{i18n>tabeCity}"/>
                    </header>
                  </Column>
                  <Column width="100px" >
                     <header>
                        <Label text= "{i18n>tableShowDetails}"></Label>
                        </header>
                  </Column>
                    </columns>
                  <items>
                  <ColumnListItem  type="Navigation" press= "showEmployee" > <!--type="Active" press="showOrders"-->
                    <cells>
                      <Label text="{odataNorthwind>EmployeeID}"></Label>
                      <Label text="{odataNorthwind>LastName}"></Label>
                      <Label text="{odataNorthwind>Country}"></Label>
                      <Label text="{odataNorthwind>City}"></Label>
                      <core:Icon src="sap-icon://show" press="showOrdersDialog"></core:Icon>
                    </cells>
                  </ColumnListItem>
                </items>
               
               </Table>
               <HBox id="ordersTable">
               </HBox>
             
           </Panel>
</core:FragmentDefinition>


