<mvc:View controllerName="logaligroup.employees.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
       <content>
         <HBox >
            <Label id="labelEmployee" text="{i18n>labelEmployee}"  class="sapUiTinyMargin" />
            <Input id="inputEmployee"  value="{/employeeId}" maxLength="6" width= "200px" class="sapUiSmallMarginEnd" liveChange="onValidate"  /><!---liveChange="onValidate"t-->
            <Label id="labelCountry" text="{i18n>labelCountry}" class="sapUiTinyMargin" visible="false"></Label>
                <Select id="slCountry" selectedKey="{/countryKey}"  items="{/listCountry}"   forceSelection="false" visible="false">
                  <items>
                    <core:Item key="{key}"  text="{text}" />
                  </items>
                </Select>
          </HBox>
          <HBox >
             <Panel >
               <Table id="tableEmployee" items="{/employees}" >
                <columns>
                   <Column >
                     <Label text="{i18n>tableId}" />
                   </Column>
                    <Column >
                     <Label text="{i18n>tableName}" />
                   </Column>
                    <Column >
                     <Label text="{i18n>tableCountry}" />
                   </Column>
                    <Column >
                     <Label text="{i18n>tableCity}" />
                   </Column>

                </columns>
                <items>
                  <ColumnListItem >
                    <cells>
                      <Label text="{EmployeeID}"></Label>
                      <Label text="{lastName}"></Label>
                      <Label text="{Country}"></Label>
                      <Label text="{City}"></Label>
                    </cells>
                  </ColumnListItem>
                </items>
               
               </Table>
             
             
             </Panel>
          
          </HBox>
       </content>
    </Page>
</mvc:View>
