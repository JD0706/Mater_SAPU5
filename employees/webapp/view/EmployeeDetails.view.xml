<mvc:View xmlns="sap.m"  controllerName="logaligroup.employees.controller.MasterEmployee"
    xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"  displayBlock="true">
<Page id="page" title ="{i18n>employeeDetails}">
  <!-- <Text  text="{jsonEmployees>LastName},{jsonEmployees>FirstName}">
   </Text>-->
   <Panel >
   <FlexBox height = "65px"  alignItems="Center" justifyContent="Center" >
    <items>
        <Text   text="{jsonEmployees>LastName}, {jsonEmployees>FirstName}"></Text>
    </items>
    </FlexBox>
   <FlexBox height = "65px"  alignItems="Start" justifyContent="SpaceBetween" >
     <items>
      <VBox >
        <Text   text="{i18n>employeeId}" class="sapUiTinyMarginEnd"></Text>
        <Text   text="{jsonEmployees>EmployeeID}" ></Text>
      </VBox>
      <VBox >
        <Text   text="{i18n>titleEmployee}" class="sapUiTinyMarginEnd"></Text>
        <Text   text="{jsonEmployees>Title}" ></Text>
      </VBox>
     </items>
   </FlexBox>
   <FlexBox   alignItems="Start"  >
    <HBox >
         <Text   text="{i18n>countryCode :}" class="sapUiTinyMarginEnd"></Text>
         <Text   text="{jsonEmployees>Country}" width="100%" ></Text>
         <layoutData >
         <FlexItemData  growFactor="3" ></FlexItemData>
         </layoutData>
   </HBox>
   <HBox >
         <Text   text="{i18n>city :}" class="sapUiTinyMarginEnd"></Text>
         <Text   text="{jsonEmployees>City}" width="100%" ></Text>
         <layoutData >
         <FlexItemData  growFactor="2" ></FlexItemData>
         </layoutData>
   </HBox>
   <FlexBox direction="Row" alignItems = "Start">
         <Text   text="{i18n>postalCode :}" class="sapUiTinyMarginEnd"></Text>
         <Text   text="{jsonEmployees>PostalCode}" width="100%" ></Text>
         <layoutData >
         <FlexItemData  growFactor="1" ></FlexItemData>
         </layoutData>
    </FlexBox >
    </FlexBox>
   </Panel>
   
 </Page>
</mvc:View>    